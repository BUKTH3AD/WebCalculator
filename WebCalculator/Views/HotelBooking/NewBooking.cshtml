@model HotelBooking

<h1>New Booking</h1>

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <form asp-controller="HotelBooking" asp-action="ConfirmBooking" method="post">
                    
                    <div class="mb-3">
                        <label class="form-label">Guest Name</label>
                        <input asp-for="GuestName" type="text" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Start Date</label>
                        <input asp-for="DateStart" type="date" class="form-control" value="date" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">End Date</label>
                        <input asp-for="DateEnd" type="date" class="form-control" value="date" />
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>